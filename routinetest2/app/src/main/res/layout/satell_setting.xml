<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#151f33"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="제목: "
            android:textColor="#FFFFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작일"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/startDate"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="20-10-10"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black" />




        <ImageButton

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/callendar"
            android:id="@+id/callendarStart"/>



    </LinearLayout>
    <TextView
        android:text="시작시간"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/startTime"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:hint="Time"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/clock"
            android:id="@+id/clockStart"/>



    </LinearLayout>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종료일"
        android:layout_margin="10dp"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/endDate"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="Date"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black" />



        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/callendar"
            android:id="@+id/callendarEnd"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종료시간"
        android:layout_margin="10dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/endTime"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:hint="Time"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/clock"
            android:id="@+id/clockEnd"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/sunday"
            android:text="일"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/monday"
            android:text="월"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/tuesday"
            android:text="화"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/wednesday"
            android:text="수"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/thursday"
            android:text="목"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/friday"
            android:text="금"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/saturday"
            android:text="토"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_margin="3dp"
            />
    </LinearLayout>

    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="15"
        android:id="@+id/simple_rule"
        android:textSize="15dp"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="저장"
            android:id="@+id/MiniPlanetSave"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정"
            android:layout_toLeftOf="@+id/MiniPlanetSave"
            android:layout_marginRight="10dp"
            android:id="@+id/MiniPlanetFix"/>

    </RelativeLayout>

</LinearLayout>