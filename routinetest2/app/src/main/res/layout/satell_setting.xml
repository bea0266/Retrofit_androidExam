<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="#151f33"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="제목"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
            <EditText
                android:layout_weight="4"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:outlineSpotShadowColor="@color/white"
                android:hint="위성 제목을 입력하세요."
                android:textColorHint="@color/white"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작 날짜/시간 선택 "
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="날짜선택 : "
                android:textColor="@color/white"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/etStartDate"
                android:layout_marginTop="5dp"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:hint=" 날짜를 선택하세요"
                android:background="#ffffff" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/callendar"
                android:id="@+id/callendarStart"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="시간선택 : "
                android:textColor="@color/white"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/etStartTime"
                android:layout_marginTop="5dp"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:hint=" 시간을 선택하세요"
                android:background="#ffffff" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/clock"
                android:id="@+id/clockStart"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종료 날짜/시간 선택 "
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="날짜선택 : "
                android:textColor="@color/white"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/etEndDate"
                android:layout_marginTop="5dp"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:hint=" 날짜를 선택하세요"
                android:background="#ffffff" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/callendar"
                android:id="@+id/callendarEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="시간선택 : "
                android:textColor="@color/white"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/etEndTime"
                android:layout_marginTop="5dp"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:hint=" 시간을 선택하세요"
                android:background="#ffffff" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/clock"
                android:layout_marginLeft="5dp"
                android:id="@+id/clockEnd"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="반복 주기 선택"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>






        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/sunday"
                android:text="일"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:background="@drawable/button_shape"
                android:layout_margin="3dp"
                />

            <Button

                android:id="@+id/monday"
                android:text="월"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:background="@drawable/button_shape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/tuesday"
                android:text="화"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:background="@drawable/button_shape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/wednesday"
                android:text="수"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:background="@drawable/button_shape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/thursday"
                android:text="목"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:background="@drawable/button_shape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/friday"
                android:text="금"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:background="@drawable/button_shape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/saturday"
                android:text="토"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:background="@drawable/button_shape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_margin="3dp"
                />
        </LinearLayout>

        <EditText
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="13"
            android:hint="실천하고 싶은 내용을 작성하세요."
            android:id="@+id/simple_rule"
            android:textSize="15dp"
            android:background="@color/white"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="저장"
                android:id="@+id/MiniPlanetSave"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:layout_toLeftOf="@+id/MiniPlanetSave"
                android:layout_marginRight="10dp"
                android:id="@+id/MiniPlanetFix"/>

        </RelativeLayout>

    </LinearLayout>

    </ScrollView>
